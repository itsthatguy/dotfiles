set-option -g prefix C-a
set -sg escape-time 0
set -g mode-mouse on
set -g status-bg "colour8"
set -g message-command-fg "colour9"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour6"
set -g message-bg "colour0"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour9"
set -g message-command-bg "colour0"
set -g status-attr "none"
set -g status-utf8 "on"
set -g pane-border-fg "colour0"
set -g status-left-attr "none"
setw -g window-status-fg "colour7"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour8"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour6"
setw -g window-status-separator ""
setw -g window-status-bg "colour8"
set -g status-left "#[fg=colour0,bg=colour6,bold] #S #[fg=colour6,bg=colour8,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour9,bg=colour0] %Y-%m-%d  %H:%M #[fg=colour6,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour6] #h "
setw -g window-status-format "#[fg=colour7,bg=colour8] #I #[fg=colour7,bg=colour8] #W "
setw -g window-status-current-format "#[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour9,bg=colour0] #I #[fg=colour9,bg=colour0] #W #[fg=colour0,bg=colour8,nobold,nounderscore,noitalics]"
