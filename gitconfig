[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[help]
  autocorrect = 1
[alias]
  author = !sh -c 'git commit --amen --reset-author -Chead && git rebase --continue'
  brs = for-each-ref --sort=-committerdate --format="%(committerdate:relative)%09%(refname:short)" refs/heads
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  put = !sh -c 'git push -u origin $(git rev-parse --abbrev-ref HEAD)'
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
  redo = commit --amen -Chead
  refrog = reflog
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetuprebase = remote
[push]
  default = tracking
[advice]
  statusHints = false
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
